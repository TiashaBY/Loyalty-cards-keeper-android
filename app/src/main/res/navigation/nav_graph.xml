<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/cardsDashboardFragment">

    <fragment
        android:id="@+id/cardDetailsViewFragment"
        android:name="com.rsschool.myapplication.loyaltycards.ui.CardDetailsViewFragment"
        android:label="CardDetailsViewFragment" >
        <action
            android:id="@+id/action_cardDetailsViewFragment_to_cardsDashboardFragment"
            app:destination="@id/cardsDashboardFragment" />
        <argument
            android:name="card"
            app:argType="com.rsschool.myapplication.loyaltycards.model.LoyaltyCard" />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.rsschool.myapplication.loyaltycards.ui.SignInFragment"
        android:label="SignInFragment" >
        <action
            android:id="@+id/action_signInFragment_to_cardsDashboardFragment"
            app:destination="@id/cardsDashboardFragment"
            app:launchSingleTop="false"
            app:popUpTo="@id/signInFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/cardsDashboardFragment"
        android:name="com.rsschool.myapplication.loyaltycards.ui.CardsDashboardFragment"
        android:label="Dashboard">
        <action
            android:id="@+id/action_cardsDashboardFragment_to_cardDetailsViewFragment"
            app:destination="@id/cardDetailsViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/addCardFragment"
        android:name="com.rsschool.myapplication.loyaltycards.ui.AddCardFragment"
        android:label="AddCardFragment" >
        <action
            android:id="@+id/action_addCardFragment_to_selectBarcodeFragment"
            app:destination="@id/selectBarcodeFragment"/>
        <argument
            android:name="barcode"
            app:argType="com.rsschool.myapplication.loyaltycards.model.Barcode"
            app:nullable="true" />
        <action
            android:id="@+id/action_addCardFragment_to_cameraPreviewFragment"
            app:destination="@id/cameraPreviewFragment" />
    </fragment>
    <fragment
        android:id="@+id/favouritesFragment"
        android:name="com.rsschool.myapplication.loyaltycards.ui.FavouritesFragment"
        android:label="FavouritesFragment" />
    <dialog
        android:id="@+id/selectBarcodeFragment"
        android:name="com.rsschool.myapplication.loyaltycards.ui.SelectBarcodeFragment"
        android:label="SelectBarcodeFragment" >
        <action
            android:id="@+id/action_selectBarcodeFragment_to_addCardFragment"
            app:destination="@id/addCardFragment" />
        <argument
            android:name="barcode"
            app:argType="com.rsschool.myapplication.loyaltycards.model.Barcode"
            app:nullable="true" />
    </dialog>
    <fragment
        android:id="@+id/cameraPreviewFragment"
        android:name="com.rsschool.myapplication.loyaltycards.ui.CameraPreviewFragment"
        android:label="CameraPreviewFragment" >
        <action
            android:id="@+id/action_cameraPreviewFragment_to_addCardFragment"
            app:destination="@id/addCardFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/addCardFragment"
            app:popUpToInclusive="false" />
    </fragment>
</navigation>