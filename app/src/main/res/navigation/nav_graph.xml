<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.rsschool.myapplication.loyaltycards.MainFragment" />
    <fragment
        android:id="@+id/cardDetailsViewFragment"
        android:name="com.rsschool.myapplication.loyaltycards.CardDetailsViewFragment"
        android:label="CardDetailsViewFragment" >
        <action
            android:id="@+id/action_cardDetailsViewFragment_to_cardsDashboardFragment"
            app:destination="@id/cardsDashboardFragment" />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.rsschool.myapplication.loyaltycards.SignInFragment"
        android:label="SignInFragment" />
    <fragment
        android:id="@+id/cardsDashboardFragment"
        android:name="com.rsschool.myapplication.loyaltycards.CardsDashboardFragment" >
        <action
            android:id="@+id/action_cardsDashboardFragment_to_cardDetailsViewFragment"
            app:destination="@id/cardDetailsViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.rsschool.myapplication.loyaltycards.SearchFragment"
        android:label="SearchFragment" />
    <fragment
        android:id="@+id/addCardFragment"
        android:name="com.rsschool.myapplication.loyaltycards.AddCardFragment"
        android:label="AddCardFragment" />
</navigation>