<resources>
    <!-- Base application theme. -->
    <style name="Theme.LoyaltyCards" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand colors. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Secondary brand colors. -->
        <item name="colorSecondary">#6F009688</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
    </style>

    <style name="Theme.LoyaltyCards.checkBoxFavStyle">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
    </style>

    <style name="AppTheme" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeBottomLeft">32dp</item>

        <item name="materialButtonStyle">@style/RoundCornersButton</item>
    </style>

    <style name="RoundCornersButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/MyShapeAppearance</item>
    </style>

    <style name="MyShapeAppearance" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="cornerFamily">rounded</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeBottomLeft">32dp</item>
    </style>
</resources>